---
interface Props {
  title: string;
}

const { title } = Astro.props;
---

<header>
  <h1>{title}</h1>
  <div class="buttons">
    <button class="primary">Primær knapp</button>
    <button class="secondary">Sekundær knapp</button>
  </div>
</header>

<style>
  header {
    margin-bottom: 2rem;
  }
  
  h1 {
    font-size: 2rem;
    margin: 0 0 1rem 0;
  }
  
  .buttons {
    display: flex;
    gap: 1rem;
    margin-top: 1rem;
  }
  
  button {
    padding: 0.5rem 1rem;
    border-radius: 4px;
    font-weight: bold;
    cursor: pointer;
  }
  
  .primary {
    background-color: #0062BA;
    color: white;
    border: none;
  }
  
  .secondary {
    background-color: white;
    color: #0062BA;
    border: 1px solid #0062BA;
  }
</style> 
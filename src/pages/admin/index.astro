---
import Layout from '../../layouts/Layout.astro';
---

<Layout 
  title="Admin | KI Norge"
  description="Administrasjonspanel for KI Norge">
  
  <div class="container">
    <header class="page-header">
      <h1>Administrasjonspanel</h1>
      <p class="lead">Administrer innhold på KI Norge</p>
    </header>

    <div class="admin-grid">
      <div class="admin-card">
        <h2>Blogginnlegg</h2>
        <p>Administrer blogginnlegg og artikler</p>
        <div class="button-group">
          <a href="/admin/posts" class="primary-button">Se alle innlegg</a>
          <a href="/admin/posts/new" class="secondary-button">Nytt innlegg</a>
        </div>
      </div>

      <div class="admin-card">
        <h2>Ressurser</h2>
        <p>Administrer ressurser og dokumentasjon</p>
        <div class="button-group">
          <a href="/admin/resources" class="primary-button">Se alle ressurser</a>
          <a href="/admin/resources/new" class="secondary-button">Ny ressurs</a>
        </div>
      </div>

      <div class="admin-card">
        <h2>Suksesshistorier</h2>
        <p>Administrer case studies og suksesshistorier</p>
        <div class="button-group">
          <a href="/admin/cases" class="primary-button">Se alle cases</a>
          <a href="/admin/cases/new" class="secondary-button">Ny case</a>
        </div>
      </div>
    </div>

    <section class="quick-actions">
      <h2>Hurtighandlinger</h2>
      <div class="actions-grid">
        <a href="/admin/posts/new" class="action-card">
          <h3>Nytt blogginnlegg</h3>
          <p>Skriv og publiser et nytt blogginnlegg</p>
        </a>
        <a href="/admin/media" class="action-card">
          <h3>Mediabibliotek</h3>
          <p>Last opp og administrer bilder og filer</p>
        </a>
        <a href="/admin/preview" class="action-card">
          <h3>Forhåndsvisning</h3>
          <p>Se hvordan siden ser ut for besøkende</p>
        </a>
      </div>
    </section>
  </div>
</Layout>

<style>
  .container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 2rem 1rem;
  }

  .page-header {
    margin-bottom: 3rem;
  }

  .page-header h1 {
    font-size: 2.5rem;
    color: var(--text-color);
    margin-bottom: 1rem;
  }

  .lead {
    font-size: 1.25rem;
    color: var(--gray-medium);
  }

  .admin-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
    gap: 2rem;
    margin-bottom: 4rem;
  }

  .admin-card {
    background: white;
    padding: 2rem;
    border-radius: 0.5rem;
    box-shadow: 0 4px 6px -1px rgba(0, 0, 0, 0.1);
  }

  .admin-card h2 {
    font-size: 1.5rem;
    color: var(--text-color);
    margin-bottom: 1rem;
  }

  .admin-card p {
    color: var(--gray-medium);
    margin-bottom: 1.5rem;
  }

  .button-group {
    display: flex;
    gap: 1rem;
  }

  .primary-button,
  .secondary-button {
    display: inline-block;
    padding: 0.75rem 1.5rem;
    border-radius: 0.375rem;
    text-decoration: none;
    font-weight: 500;
    transition: all 0.2s;
  }

  .primary-button {
    background: var(--primary-color);
    color: white;
  }

  .secondary-button {
    background: transparent;
    color: var(--primary-color);
    border: 2px solid var(--primary-color);
  }

  .primary-button:hover,
  .secondary-button:hover {
    transform: translateY(-2px);
  }

  .quick-actions {
    margin-top: 4rem;
  }

  .quick-actions h2 {
    font-size: 1.5rem;
    color: var(--text-color);
    margin-bottom: 1.5rem;
  }

  .actions-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
    gap: 1.5rem;
  }

  .action-card {
    background: var(--gray-light);
    padding: 1.5rem;
    border-radius: 0.5rem;
    text-decoration: none;
    transition: transform 0.2s;
  }

  .action-card:hover {
    transform: translateY(-2px);
  }

  .action-card h3 {
    font-size: 1.25rem;
    color: var(--primary-color);
    margin-bottom: 0.5rem;
  }

  .action-card p {
    color: var(--gray-medium);
    font-size: 0.875rem;
  }

  @media (max-width: 768px) {
    .button-group {
      flex-direction: column;
    }

    .admin-grid {
      grid-template-columns: 1fr;
    }
  }
</style> 